# {{ ansible_managed }}

[Unit]
Description="Prometheus NATS Exporter"
After=network.target nats-server.service

[Service]
Type=simple
RestartSec=5s
Restart=on-failure
User=nats-exporter
Group=nats-exporter
ExecStop=/bin/kill -s SIGINT $MAINPID
#ExecReload=/bin/kill -s HUP $MAINPID
ExecStart=/usr/local/bin/prometheus-nats-exporter -channelz -connz -gatewayz -routez -serverz -subz -varz http://{{ ansible_fqdn }}:8222

[Install]
WantedBy=multi-user.target
